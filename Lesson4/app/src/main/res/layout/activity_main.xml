<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F2027"
    tools:context=".MainActivity">

    <!-- Часы -->
    <TextView
        android:id="@+id/textClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:30"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp" />

    <!-- Обложка альбома в круглой рамке -->
    <FrameLayout
        android:id="@+id/albumContainer"
        android:layout_width="280dp"
        android:layout_height="280dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <!-- Тень -->
        <View
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:background="@drawable/shadow_circle" />

        <!-- Круглая обложка -->
        <ImageView
            android:id="@+id/OlegTrain"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/train"
            android:contentDescription="Album cover"
            android:clipToOutline="true"
            android:outlineProvider="background" />

    </FrameLayout>

    <!-- Название трека -->
    <TextView
        android:id="@+id/editTextNameTrack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:text="Поезд на Сурхарбан"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Прогресс-бар -->
    <SeekBar
        android:id="@+id/progressBarTrack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:progressTint="#4FC3F7"
        android:thumbTint="#FFFFFF"
        android:progressBackgroundTint="#666666"
        android:progress="30"
        app:layout_constraintTop_toBottomOf="@+id/editTextNameTrack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Время трека -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/progressBarTrack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/textViewCurrentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:30"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4:20"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Панель управления -->
    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/progressBarTrack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Кнопка дизлайка -->
        <ImageButton
            android:id="@+id/imageViewDislike"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="center"
            android:background="@drawable/button_circle"
            android:src="@android:drawable/btn_dialog"
            android:contentDescription="Dislike"
            app:tint="#FFFFFF" />

        <!-- Кнопка предыдущего трека -->
        <ImageButton
            android:id="@+id/imageButtonPrevious"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:scaleType="center"
            android:background="@drawable/button_circle"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="Previous"
            app:tint="#FFFFFF" />

        <!-- Кнопка play/pause -->
        <ImageButton
            android:id="@+id/imageButtonStart"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="16dp"
            android:scaleType="center"
            android:background="@drawable/button_circle_accent"
            android:src="@android:drawable/ic_media_play"
            android:contentDescription="Play/Pause" />

        <!-- Кнопка следующего трека -->
        <ImageButton
            android:id="@+id/imageButtonNext"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:scaleType="center"
            android:background="@drawable/button_circle"
            android:src="@android:drawable/ic_media_next"
            android:contentDescription="Next"
            app:tint="#FFFFFF" />

        <!-- Кнопка лайка -->
        <ImageButton
            android:id="@+id/imageViewLike"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="center"
            android:background="@drawable/button_circle"
            android:contentDescription="Like"
            app:tint="#FF4081" />

    </LinearLayout>

    <!-- Guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

</androidx.constraintlayout.widget.ConstraintLayout>